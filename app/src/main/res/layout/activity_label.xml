<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--   android:background="#000000"-->


    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mask_frontal" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="onButtonClic"
        android:tag="1"
        android:text="@string/label_1"
        android:textColor="#E91E63"
        app:layout_constraintEnd_toStartOf="@+id/btn_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="onButtonClic"
        android:tag="2"
        android:text="@string/label_2"
        android:textColor="#3F51B5"
        app:layout_constraintEnd_toStartOf="@+id/btn_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/photo" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="onButtonClic"
        android:tag="3"
        android:text="@string/label_3"
        android:textColor="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/photo" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="onButtonClic"
        android:tag="4"
        android:text="@string/label_4"
        android:textColor="#E4FB8C00"
        app:layout_constraintEnd_toEndOf="@+id/btn_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1" />
    <!--tools:visibility="invisible" /-->

    <Button
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="onButtonClic"
        android:tag="5"
        android:text="@string/label_5"
        android:textColor="#07A9F8"
        app:layout_constraintEnd_toStartOf="@+id/btn_6"
        app:layout_constraintStart_toEndOf="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_2" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="onButtonClic"
        android:tag="6"
        android:text="@string/label_6"
        android:textColor="#91F12D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_3" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="onButtonClic"
        android:tag="7"
        android:text="@string/label_7"
        android:textColor="#8E24AA"
        app:layout_constraintEnd_toEndOf="@+id/btn_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_4" />


    <Button
        android:id="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="onButtonClic"
        android:tag="8"
        android:text="@string/label_8"
        android:textColor="#FBDE5B"
        app:layout_constraintEnd_toStartOf="@+id/btn_6"
        app:layout_constraintStart_toEndOf="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_5" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="onButtonClic"
        android:tag="9"
        android:text="@string/label_9"
        android:textColor="#C3430A09"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_6" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="○"
        android:visibility="invisible"
        android:textColor="#E91E63"
        android:textSize="129dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="-20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="○"
        android:visibility="invisible"
        android:textColor="#3F51B5"
        android:textSize="129dp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="-19dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="○"
        android:visibility="invisible"
        android:textColor="#009688"
        android:textSize="129dp"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="-27dp" />


</androidx.constraintlayout.widget.ConstraintLayout>